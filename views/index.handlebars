<h1>Burgers!</h1>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
       <li>{{burger_name}}
         </li> 
    {{/if}} 
  {{/each}}
</ul>

<h2>Burgers to choose from!</h2>

<ul>
  {{#each burgers}}
    <li>{{burger_name}}

       <form action="/{{this.id}}" method="POST">
<button class="devour" data-id="{{this.id}}">Devour!</button>
{{!-- <input type="submit" value="Submit"> --}}
</form>
    
    </li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devour">Hungry?</label><br>
    <input type="radio" name="devour" value="1" checked> Hungry!<br>
    <input type="radio" name="devour" value="0"> Full
  </div>

  <button type="submit">Add Burger</button>
</form>
